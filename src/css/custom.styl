body .el-table th.gutter
    display table-cell!important

body .el-table colgroup.gutter
    display table-cell!important

.el-table
  color #000
  .el-button
    margin-bottom 3px
    margin-top 3px
.el-table td, .el-table th
  height 40px
  padding 0
  border-color #e4e8ee
.el-button
  padding 10px 15px
  // border-color black
.el-button.el-button--small
  padding 5px
.el-message-box__btns>.el-button.el-button--small
  padding 10px 15px
.el-dialog
  position absolute
  top 50%
  left 50%
  margin 0 !important
  max-height calc(100% - 30px)
  max-width calc(100% - 30px)
  transform translate(-50%, -50%)
  display flex
  flex-direction column
  width 550px
  @media (max-width:800px)
    width 90%
  >.el-dialog__body
    overflow auto
.el-dialog__header
  background-color #fafafa
  border 1px solid #e5e5e5
  border-top-left-radius 4px
  border-top-right-radius 4px
  padding 10px
.el-dialog__footer
  border-top 1px solid #eee
  text-align center
  padding 10px
  .el-button
    width 90px
  .el-button+.el-button
    margin-left 90px
  
