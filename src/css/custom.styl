.el-message-box__btns
  display flex
  justify-content center
  button
    width 90px
    &:nth-child(1)
      margin-left 60px
    &:nth-child(2)
      order -1

.el-loading-mask
  z-index 2000

.el-date-table
  div
    position relative

.el-form-item
  margin-bottom 12px
.el-form-item__error
  position relative

.el-input__inner
  height 32px
  padding 0 10px
  // border-color black
.el-form-item__content, .el-form-item__label, .el-input__icon
  line-height 32px
.el-input-number
  line-height 30px

//修复el-time-picker
.el-time-panel .el-scrollbar__wrap
  overflow-x hidden
.el-time-spinner__wrapper
  height 188px


.el-table img
  display: block
  margin: 3px auto
  width: 100px !important

.el-tree--highlight-current .el-tree-node.is-current>.el-tree-node__content
  background-color #bdf

.el-table .cell
  padding: 10px
.inputBorderNone .el-input__inner
    border none
